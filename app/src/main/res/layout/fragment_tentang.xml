<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/textColorPrimary"
    android:orientation="vertical">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/icon_tentang"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Cek Anemia"
        android:textColor="@color/navigationBarColor"
        android:textSize="14dp"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Versi 1.0"
        android:textSize="10dp"
        android:textColor="@color/navigationBarColor"
        android:layout_gravity="center_horizontal"
        android:layout_centerInParent= "true"/>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/windowBackground"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:background="@color/colorPrimaryDark"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Aplikasi"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/aplikasi"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:textColor="@color/navigationBarColor"
                android:layout_gravity="center"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/windowBackground"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:background="@color/colorPrimaryDark"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Develover"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ismail"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:textColor="@color/navigationBarColor"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Teknik Informatika"
                android:textSize="15sp"
                android:textColor="@color/navigationBarColor"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Universitas Islam Negeri Alauddin"
                android:textSize="15sp"
                android:textColor="@color/navigationBarColor"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Makassar"
                android:textSize="15sp"
                android:textColor="@color/navigationBarColor"
                android:layout_gravity="center"/>


        </LinearLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kontak :"
        android:textSize="14dp"
        android:textStyle="bold"
        android:textColor="@color/navigationBarColor"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/textColorPrimary"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_gravity="center">
        <ImageButton
            android:src="@drawable/facebook"
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:id="@+id/btnfacebook"/>

        <ImageButton
            android:src="@drawable/insta"
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:layout_marginLeft="35dp"
            android:id="@+id/btninstagram"/>

        <ImageButton
            android:src="@drawable/twitter"
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:layout_marginLeft="35dp"
            android:id="@+id/btntwitter"/>

        <ImageButton
            android:src="@drawable/google"
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:layout_marginLeft="35dp"
            android:id="@+id/btngmail"/>

    </LinearLayout>





</LinearLayout>